# Additional options that are passed to the Daemon.
DAEMON_OPTS=""

export GST_PLUGIN_PATH=$GST_PLUGIN_PATH:/usr/lib/gstreamer-1.0

# whom the daemons should run as
DAEMON_USER=nobody

# Logging
LOG_SIZE=10M
